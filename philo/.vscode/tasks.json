{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile and debug",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-Werror",
                "-pthread",
                "-g",
                "-o",
                "${workspaceFolder}/philo",
                "philosophers.c",
                "validation.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "isBackground": false,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "debug build",
            "type": "shell",
            "command": "make",
            "args": ["debug"],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "isBackground": false
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "isBackground": false
        }
    ]
}
